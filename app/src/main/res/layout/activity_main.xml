<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <EditText
       android:id="@+id/et_view_1"
       android:hint="gmail"
       style="@style/EditText"
       android:drawableStart="@drawable/ic_format"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="40dp"
       android:inputType="textEmailAddress"
     />
   <EditText
       android:id="@+id/et_view_2"
       style="@style/EditText"
       android:hint="Theme"
       android:drawableStart="@drawable/ic_mail"
       app:layout_constraintTop_toBottomOf="@id/et_view_1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:inputType="textEmailSubject"
       />
   <EditText
       android:id="@+id/et_view_3"
       style="@style/EditText"
       android:hint="Text"
       app:layout_constraintTop_toBottomOf="@id/et_view_2"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:drawableStart="@drawable/ic_message"
       android:background="@drawable/edit2"
       android:inputType="textMultiLine"
       />
   <Button
       android:id="@+id/btn_send"
       style="@style/Button"
       android:text="Send"
       android:background="@drawable/button"
       app:layout_constraintTop_toBottomOf="@id/et_view_3"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="140dp"
       />
   <Button
       android:id="@+id/btn_next"
       style="@style/Button"
       android:background="@drawable/button"
       android:text="next"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="40dp"
       />
</androidx.constraintlayout.widget.ConstraintLayout>